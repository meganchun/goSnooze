{
  "expo": {
    "name": "go-snooze",
    "slug": "go-snooze",
    "scheme": "go-snooze",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#0057FF"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow GoSnooze to use your location."
        }
      ],
      "expo-secure-store"
    ],
    "ios": {
      "buildNumber": "1.0.0",
      "runtimeVersion": {
        "policy": "sdkVersion"
      },
      "deploymentTarget": "13.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need access to your location to provide live tracking.",
        "NSLocationAlwaysUsageDescription": "We need access to your location even when the app is in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    }
  }
}
